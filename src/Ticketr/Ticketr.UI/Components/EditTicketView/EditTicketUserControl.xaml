<UserControl x:Class="Ticketr.UI.Components.EditTicketUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ticketr.UI.Components"
             mc:Ignorable="d" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:StyleAlias="clr-namespace:Ticketr.Businesslogik;assembly=Ticketr.Businesslogik"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="700" d:DesignWidth="2000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#EEEEEE">
        <materialDesign:Card Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox materialDesign:TextFieldAssist.Hint="Titel" BorderBrush="{DynamicResource AccentColorBrush2}" Grid.Row="0" Margin="20"></TextBox>
                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" materialDesign:TextFieldAssist.Hint="Beschreibung" BorderBrush="{DynamicResource AccentColorBrush2}" Grid.Row="1" Margin="20,0,20,20"></TextBox>
                </Grid>
                <Grid Grid.Column="1" Margin="5,10,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="5,10" Grid.Row="0" Text="Priorität"></TextBlock>
                    <ComboBox ItemsSource="{Binding Prioritäten}" SelectedItem="{Binding Path=SelectedPriority}" Grid.Row="1" Width="200" Height="30" BorderBrush="{DynamicResource AccentColorBrush2}" Margin="5"></ComboBox>
                    <TextBlock Margin="5" Grid.Row="2" Text="Kategorie"></TextBlock>
                    <ComboBox Grid.Row="3" ItemsSource="{Binding Kategorien}" IsEditable="True" Width="200" Height="30" BorderBrush="{DynamicResource AccentColorBrush2}" Margin="5">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                                <Setter Property="IsEnabled" Value="{Binding IsSubItem}" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSubItem}" Value="false">
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Margin="5" Grid.Row="4" Text="Status" ToolTip="Deaktiviert"></TextBlock>
                    <ComboBox Grid.Row="5" IsEnabled="False" ToolTip="Deaktiviert" IsEditable="True" Width="200" Height="30" BorderBrush="{DynamicResource AccentColorBrush2}" Margin="5"></ComboBox>
                    <TextBlock Margin="5" Grid.Row="6" Text="Bearbeitender"></TextBlock>
                    <!-- Todo: Textsearch von Vornamen -->
                    <ComboBox Grid.Row="7" ItemsSource="{Binding Mitarbeiter}" TextSearch.TextPath="Name" IsTextSearchEnabled="True" IsEditable="True" Width="200" Height="30" BorderBrush="{DynamicResource AccentColorBrush2}" Margin="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="30" Source="{Binding ProfilePicture}" Margin="0,0,5,0"></Image>
                                    <TextBlock Text="{Binding Vorname}" Margin="0,0,5,0" VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Margin="10" Grid.Row="8" Content="Speichern" Foreground="White" VerticalAlignment="Bottom"></Button>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
